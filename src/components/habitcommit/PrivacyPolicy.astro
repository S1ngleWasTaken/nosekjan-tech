  const contentCz = document.getElementById("content-cz");
  const contentEn = document.getElementById("content-en");

  /**
   * @param {string} lang
   */
  function setLanguage(lang: String) {
    if (lang === "cz") {
      headerCz?.classList.remove("hidden");
      headerEn?.classList.add("hidden");
      contentCz?.classList.remove("hidden");
      contentEn?.classList.add("hidden");

      btnCz?.classList.remove("opacity-50");
      btnCz?.classList.add("opacity-100");
      btnEn?.classList.remove("opacity-100");
      btnEn?.classList.add("opacity-50");
    } else {
      headerCz?.classList.add("hidden");
      headerEn?.classList.remove("hidden");
      contentCz?.classList.add("hidden");
      contentEn?.classList.remove("hidden");

      btnCz?.classList.remove("opacity-100");
      btnCz?.classList.add("opacity-50");
      btnEn?.classList.remove("opacity-50");
      btnEn?.classList.add("opacity-100");
    }
  }

  btnCz?.addEventListener("click", () => setLanguage("cz"));
  btnEn?.addEventListener("click", () => setLanguage("en"));
</script>
